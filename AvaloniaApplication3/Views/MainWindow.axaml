<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
		Width="1200" Height="700"
        MinWidth="1200" MinHeight="700"
        x:Class="AvaloniaApplication3.MainWindow"
		xmlns:vm="clr-namespace:AvaloniaApplication3.ViewModels"
        xmlns:view="clr-namespace:AvaloniaApplication3.Views"
		x:DataType="vm:MainViewModel"
        Title="AvaloniaApplication3">
<Window.DataContext>
	<vm:MainViewModel></vm:MainViewModel>
</Window.DataContext>
	
	<Grid Background="{DynamicResource PrimaryBackground}"  ColumnDefinitions="Auto,*">
		
<ContentControl Grid.Column="1" Content="{Binding  CurrentPage}"></ContentControl>		
		
		<Border Grid.Column="0"   Padding="20" Background="{DynamicResource PrimaryBackgroundGradient}">
			<Grid RowDefinitions="*,Auto">
				<StackPanel Grid.Row="0" Spacing="5">
					<Image PointerPressed="InputElement_OnPointerPressed" Width="150"     Margin="0,-20,0,0" Source="{Binding SideMenuImage}" IsVisible="{Binding Path=SideMenuExpanded}"></Image>
					<Image PointerPressed="InputElement_OnPointerPressed" Width="50"     Margin="0,-20,0,0" Source="{Binding SideMenuImage}" IsVisible="{Binding Path=!SideMenuExpanded}"></Image>
					
					<Button   HorizontalAlignment="Stretch" Classes.active="{Binding HomePageIsActive}" Command="{Binding GotoHomeCommand}">
						<StackPanel Orientation="Horizontal">
							<Label Classes="icon"  Content=""></Label>
							<Label Classes="font" Content="Home11" IsVisible="{Binding Path=SideMenuExpanded}"></Label>
						</StackPanel>
					</Button>

					<Button HorizontalAlignment="Stretch" Classes.active="{Binding ProcessPageIsActive}"  Command="{Binding GotoProcessCommand}">
						<StackPanel Orientation="Horizontal">
							<Label Classes="icon"  Content=""></Label>
							<Label Classes="font" Content="Process" IsVisible="{Binding Path=SideMenuExpanded}"></Label>

						</StackPanel>
					</Button>
					<Button HorizontalAlignment="Stretch"  Classes.active="{Binding ActionPageIsActive}" Command="{Binding GotoActionCommand}">
						<StackPanel Orientation="Horizontal">
							<Label Classes="icon"  Content=""></Label>
							<Label Classes="font" Content="Action" IsVisible="{Binding Path=SideMenuExpanded}"></Label>

						</StackPanel>
					</Button>
					<Button HorizontalAlignment="Stretch" Classes.active="{Binding MacrosPageIsActive}" Command="{Binding GotoMacrosCommand}">
						<StackPanel Orientation="Horizontal">
							<Label Classes="icon"  Content=""></Label>
							<Label Classes="font" Content="Macros" IsVisible="{Binding Path=SideMenuExpanded}"></Label>

						</StackPanel>
					</Button>
					<Button HorizontalAlignment="Stretch" Classes.active="{Binding ReporterPageIsActive}" Command="{Binding GotoReporterCommand}">
						<StackPanel Orientation="Horizontal">
							<Label Classes="icon"  Content=""></Label>
							<Label Classes="font" Content="Reporter" IsVisible="{Binding Path=SideMenuExpanded}"></Label>

						</StackPanel>
					</Button>
					<Button HorizontalAlignment="Stretch" Classes.active="{Binding HistoryPageIsActive}" Command="{Binding GotoHistoryCommand}">
						<StackPanel Orientation="Horizontal">
							<Label Classes="icon"  Content=""></Label>
							<Label Classes="font" Content="History" IsVisible="{Binding Path=SideMenuExpanded}"></Label>

						</StackPanel>
					</Button>
					
				</StackPanel>
				<Button Grid.Row="1"
					  HorizontalAlignment="Left"
					  Classes.active="{Binding SettingPageIsActive}"  Command="{Binding GotoSettingCommand}"
				>
					<Border Classes="icon-only"
                           >
						<Label Classes="icon-only" Content="" />
					</Border>
				</Button>
			</Grid>
		</Border>
	</Grid>
	
 
</Window>
